<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SYBLOOD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogBaseStyle"  parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item><!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题 -->
        <item name="android:windowIsFloating">true</item><!-- 设置浮动窗口 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 设置屏幕变暗 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="DialogBaseStyle_Loading"  parent="DialogBaseStyle">
        <item name="android:backgroundDimEnabled">true</item><!-- 设置屏幕变暗 -->
    </style>
    <style name="BaseNegativeButtonStyle">
        <item name="android:background">@drawable/lib_base_negative_button_bg</item>
        <item name="android:textSize">@dimen/LIB_PX32</item>
        <item name="android:textColor">@color/colorC9C9C9</item>
    </style>
    <style name="BasePositiveButtonStyle">
        <item name="android:background">@drawable/lib_base_positive_button_bg</item>
        <item name="android:textSize">@dimen/LIB_PX32</item>
        <item name="android:textColor">@color/colorFFFFFF</item>
    </style>
    <style name="Loading_Diag" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/colorFFFFFF</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ProgressBar_Style" parent="Loading_Diag"/>
</resources>